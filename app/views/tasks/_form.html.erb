<%= form_with(model: [@todo_list, task], data: { turbo_frame: "main_content" }) do |f| %>
  <% if task.errors.any? %>
    <ul>
      <% task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>

  <div>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>

  <div>
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <%= f.submit %>
<% end %>
